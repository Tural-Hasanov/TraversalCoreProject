@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Role Listi</h1>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Role Adı</th>
            <th>Role Sil</th>
            <th class="">Role Yenilə</th>
        </tr>


        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Yenilə</a></td>
            </tr>
        }


    </table>
}
else
{
    <tr class="alert alert-success">
        <td> Hər hansı bir rol tapılmadı</td>
    </tr>
}
<br />
<br />
<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Əlavə</a>