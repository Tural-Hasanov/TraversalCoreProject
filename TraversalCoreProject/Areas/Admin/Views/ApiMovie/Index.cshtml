@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Top 100</h1>
<br />
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Sıra</th>
        <th>Film adı</th>
        <th>İMDB xalı</th>
        <th>Film ili</th>
        <th>Fraqment</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rank</td>
            <td><img src="@item.thumbnail"/></td>
            <td>@item.title</td>
            <td>@item.rating</td>
            <td>@item.year</td>
            <td><a href="#" class="btn btn-outline-dark">Film Fraqmentini İzlə</a></td>
        </tr>
    }
</table>

