@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>İstifadəçinin Köhnə Rezervasiyaları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Qonaq Ad Soyad</th>
        <th>Rota</th>
        <th>Adam Sayı</th>
        <th>Tarix</th>
        <th>Təsvir</th>
    </tr>
    @foreach (var item in Model)
    {
        count = count + 1;
        <tr>
            <td>@count</td>
            <td>@item.AppUser.Name @item.AppUser.SurName</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-primary">Detallar</a></td>
        </tr>
    }
</table>